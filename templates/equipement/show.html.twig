{% extends 'base.html.twig' %}

{% block title %} Réservation !{% endblock %}
{% block headerLogged %} {% endblock %}

{% block navbarLogged %} {% endblock %}

{% block body %}

    <!-- PRODUCT -->
    <div class="container">
      <div class="container-fluid">
        <div class="wrapper row">
        
          <div class="preview col-md-6">
            <div class="album py-5 preview-pic tab-content">
              <div class="row justify-content-md-center no-gutters">
                <div class="col-md-6 col-resize-p">
                  <div class="card mb-6 box-shadow">
                    <img class="card-img-top" src="{{ asset('assets/img/data/resize/200x200-' ~ equipement.image) }}" alt="{{ equipement.name }}">
                    <div class="card-body">
                      <p class="card-text">{{ equipement.name }}</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="details col-md-6 bg-light bg-gradient justify-content">
            <h3 class="product-title">{{ equipement.name }}</h3>
            <p class="product-description">{{ equipement.description }}.</p>
            <h4 class="colors disponibility">
              <span class="color green available" data-toggle="tooltip" title="Not In store">{{ equipement.isCanBeLoaned }}</span>
            </h4>
            <div class="emplacement">Emplacement</div>
          </div>

          <div>
             <h1>Ajouter un nouvel événement</h1>
              {{ include('equipement/_form.html.twig') }}
          </div>

          <div>
            <h1>Modifier Calendar</h1>

            {# {{ include('equipement/_form.html.twig', {'button_label': 'Modifier'}) }}

            {{ include('equipement/_form.html.twig') }} #}
          </div>

        </div>
      </div>
    </div>

    <!-- /PRODUCT -->

{% endblock %}
{% block footer %} {% endblock %}
