{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block headerForm %} {% endblock %}
{% block navbarLoggout %} {% endblock %}

{% block body %}
    <div class="container h-100">
        <div class="d-flex justify-content-center h-10">
            <div class="user_card">
                <div class="d-flex justify-content-center">
                    <div class="brand_logo_container">
                        <img src="/assets/img/Logo_StockIT-Black.png" class="brand_logo" alt="Logo">
                    </div>
                </div>
                <div class="d-flex justify-content-center form_container">
                    {{ form_start(registrationForm, { 'attr' : { 'class': 'form-register' } }) }}
                        {% if notification %}
                            <div class="alert alert-info" role="alert">
                                <p>{{ notification }}</p>
                            </div>
                        {% endif %}
                        <div class="d-flex justify-content-center">
                            <h1 class="text-uppercase text-center"> Créer un compte </h1>
                        </div>

                        <div class="input-group mb-2 float-sm-start">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fa fa-building" aria-hidden="true"></i></span>
                            </div>
                            {{ form_widget(registrationForm.entreprise, { 'attr' : { 'class': 'form-control input_user' } }) }}
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-user fa-duotone fa-user"></i></span>
                            </div>
                            {{ form_widget(registrationForm.lastName, { 'attr' : { 'class': 'form-control input_user' } }) }}
                        </div>

                        <div class="input-group mb-2">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-user fa-duotone fa-user"></i></span>
                            </div>
                            {{ form_widget(registrationForm.firstName, { 'attr' : { 'class': 'form-control input_user' } }) }}
                        </div>

                        <div class="input-group mb-2">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
                            </div>
                            {{ form_widget(registrationForm.email, { 'attr' : { 'class': 'form-control input_user' } }) }}
                        </div>

                        <div class="input-group mb-2">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            {{ form_widget(registrationForm.plainPassword.first, {
                                'label': 'Password',
                                'attr' : { 'class': 'form-control input_pass'}
                            }) }}
                        </div>

                        <div class="input-group mb-2">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            {{ form_widget(registrationForm.plainPassword.second, {
                                'label': 'Password',
                                'attr' : { 'class': 'form-control input_pass'}
                            }) }}
                        </div>

                        <div class="d-flex justify-content-center mt-3 register_container">
                             <div class="custom-control">
                                {{ form_row(registrationForm.agreeTerms, { 'attr' : { 'class': 'custom-control-input' } }) }}
                            </div>
                        </div>

                        <div class="d-flex justify-content-center mt-3 register_container">
                            <button type="submit" class="btn btn-register" name="register">Inscription</button>
                        </div>
                        <div class="mt-4">
                            <div class="d-flex justify-content-center links">
                                Vous avez déjà un compte ?&nbsp; <a href="{{ path('app_login') }}" class="ml-2">Se connecter</a>
                            </div>
                        </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block formFooter %} {% endblock %}
