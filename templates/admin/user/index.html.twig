{% extends 'admin/index.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
    <h1>Tous les utilisateurs</h1>
        <div class="table-responsive-sm">
            <table class="table table-striped">
                <thead>
                    <tr scope="row">
                        <th scope="col">Id</th>
                        <th scope="col">Email</th>
                        <th scope="col">Roles</th>
                        <th scope="col">Mot de Passe</th>
                        <th scope="col">Prénom</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Entreprise</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr scope="row">
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        <td>{{ user.password }}</td>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.entreprise }}</td>
                        <td>
                            <a href="{{ path('app_admin_user_show', {'id': user.id}) }}">Voir</a>
                            <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr scope="row">
                        <td colspan="10">Aucune données trouvées</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="centered">
            <button type="button" id="newUser" name="newUser" title="newUser" class="btn btn-users" onclick="window.location.href = '{{ path('app_admin_user_new') }}';">
                <i class="fa fa-plus" aria-hidden="true"></i> Ajouter un nouvel utilisateur
            </button>
        </div>
        <div class="centered">
            <button type="button" id="back" name="back" title="back" class="btn btn-back" onclick="window.location.href = '{{ path('app_admin_index') }}';">
            Retour à la liste des utilisateurs
            </button>
        </div>
{% endblock %}
{% block footer %} {% endblock %}
